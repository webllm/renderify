{
  "name": "renderify-monorepo",
  "version": "0.0.1",
  "private": true,
  "preconstruct": {
    "packages": [
      "packages/!(dev)"
    ],
    "distFilenameStrategy": "unscoped-package-name",
    "globals": {},
    "exports": {
      "importConditionDefaultExport": "default"
    },
    "___experimentalFlags_WILL_CHANGE_IN_PATCH": {
      "importsConditions": true
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "description": "A dynamic web framework powered by LLM",
  "main": "index.js",
  "scripts": {
    "test": "yarn typecheck && yarn unit",
    "unit": "tsx --test \"tests/**/*.test.ts\"",
    "typecheck": "tsc --noEmit",
    "validate": "preconstruct validate",
    "build": "preconstruct build",
    "clean": "lerna exec -- rm -rf ./dist",
    "dev": "preconstruct dev",
    "watch": "preconstruct watch",
    "cli": "tsx packages/cli/src/index.ts",
    "playground": "tsx packages/cli/src/index.ts playground",
    "commit": "yarn git-cz"
  },
  "author": "unadlib",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-typescript": "^7.28.5",
    "@preconstruct/cli": "^2.8.10",
    "commitizen": "^4.3.1",
    "jest": "^29.7.0",
    "lerna": "^8.1.8",
    "ts-jest": "^29.2.6",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
