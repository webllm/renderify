{
  "name": "@renderify/cli",
  "version": "0.5.0",
  "main": "dist/cli.cjs.js",
  "types": "dist/cli.d.ts",
  "module": "dist/cli.esm.js",
  "exports": {
    ".": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.esm.js",
      "require": "./dist/cli.cjs.js",
      "default": "./dist/cli.esm.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc -p tsconfig.json --pretty false --noEmit",
    "lint": "biome lint src",
    "clean": "rm -rf dist dist-types",
    "build:repo": "tsup --config tsup.config.ts",
    "watch:repo": "tsup --config tsup.config.ts --watch"
  },
  "author": "unadlib",
  "license": "MIT",
  "description": "A CLI for Renderify",
  "keywords": [
    "renderify",
    "cli",
    "playground",
    "streaming",
    "dynamic-ui",
    "llm"
  ],
  "homepage": "https://github.com/webllm/renderify#readme",
  "bugs": {
    "url": "https://github.com/webllm/renderify/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/webllm/renderify.git",
    "directory": "packages/cli"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "sideEffects": false,
  "dependencies": {
    "@renderify/core": "workspace:^",
    "@renderify/ir": "workspace:^",
    "@renderify/llm": "workspace:^",
    "@renderify/security": "workspace:^",
    "@renderify/runtime": "workspace:^"
  },
  "bin": {
    "renderify": "bin/renderify.js"
  }
}
