{
  "specVersion": "runtime-plan/v1",
  "id": "example_counter_plan",
  "version": 1,
  "capabilities": {
    "domWrite": true,
    "maxExecutionMs": 1000,
    "maxComponentInvocations": 50
  },
  "state": {
    "initial": {
      "count": 0
    }
  },
  "root": {
    "type": "element",
    "tag": "section",
    "props": {
      "class": "runtime-counter"
    },
    "children": [
      {
        "type": "element",
        "tag": "h2",
        "children": [
          {
            "type": "text",
            "value": "Runtime Counter"
          }
        ]
      },
      {
        "type": "element",
        "tag": "p",
        "children": [
          {
            "type": "text",
            "value": "Count: {{state.count}}"
          }
        ]
      }
    ]
  }
}
